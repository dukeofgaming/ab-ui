{
  "source": ["design/tokens/tokens.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "src/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables",
          "options": {
            "selector": ":root"
          },
          "filter": "isGlobal"
        },
        {
          "destination": "themes.css",
          "format": "css/themeClasses",
          "filter": "isTheme"
        }
      ]
    }
  }
}